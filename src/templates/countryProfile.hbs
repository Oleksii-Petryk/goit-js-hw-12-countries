
{{#each this}}
<article class="country-card">
    <h2 class="country-card__name">{{name}}</h2>
    <div class="profile">
        <div class="profile__text">
            <ul class="country-info">
                <li class="country-info__item"><span class="country-info__item--head">Capital:</span>{{capital}}</li>
                <li class="country-info__item"><span class="country-info__item--head">Population:</span>{{population}}</li>
                <li class="country-info__item"><span class="country-info__item--head">Languages:</span>
                    <ul class="language">
                        {{#each languages}}
                        <li class="language__item">
                            {{name}}
                        </li>
                        {{/each}}
                    </ul>
                </li>
            </ul>
        </div>
        <div class="profile__image">
            <img src={{flag}} alt={{name}} width="300">
        </div>
    </div>
</article>
{{/each}}